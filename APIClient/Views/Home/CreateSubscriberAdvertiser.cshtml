@model APIClient.Models.AnnonsorModel

@{
    ViewData["Title"] = "Skapa annonsör utifrån prenumerantuppgifter";
}

<div class="container">
    <h2>Skapa annonsör utifrån prenumerantuppgifter</h2>

    <form asp-controller="Home" asp-action="CreateSubscriberAdvertiser" method="post">
        <div class="form-group">
            <label asp-for="Namn">Namn:</label>
            <input asp-for="Namn" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="PrenumerantId">PrenumerantId:</label>
            <input asp-for="PrenumerantId" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Telefonnummer">Telefonnummer:</label>
            <input asp-for="Telefonnummer" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Utdelningsadress">Utdelningsadress:</label>
            <input asp-for="Utdelningsadress" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Postnummer">Postnummer:</label>
            <input asp-for="Postnummer" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Ort">Ort:</label>
            <input asp-for="Ort" class="form-control"/>
        </div>
        <input asp-for="AnnonsorId" type="hidden" />
        <input type="hidden" asp-for="ForetagsAnnonsor" value="false"/>
        <div class="form-group">
            <input type="submit" value="Skapa annonsör från prenumerant" class="btn btn-primary" style="background-color: green; color: white;"/>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <p style="color: green;">@ViewBag.SuccessMessage</p>
    }

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <p style="color: red;">@ViewBag.ErrorMessage</p>
    }

    @if (!string.IsNullOrEmpty(ViewBag.AnnonsButtonVisible) && ViewBag.AnnonsButtonVisible == "true")
    {
        <form asp-controller="Home" asp-action="CreateAd" method="get">
            <input type="hidden" name="annonsorId" value="@Model.AnnonsorId"/>
            <button type="submit" class="btn btn-success">Skapa annons</button>
        </form>
    }
</div>